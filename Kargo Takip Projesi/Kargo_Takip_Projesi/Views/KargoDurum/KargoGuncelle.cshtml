@model Kargo_Takip_Projesi.Models.Veri_Tabani.Kargo_Durum
@{
    ViewBag.Title = "KargoGuncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Guncelle", "KargoDurum", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Kargo_Id)
        @Html.TextBoxFor(m => m.Kargo_Id, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.Kargo_Islem_Tarihi)
        @Html.TextBoxFor(m => m.Kargo_Islem_Tarihi, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.Kargo_Durumu)
        @Html.TextBoxFor(m => m.Kargo_Durumu, new { @class = "form-control" })

    </div>
    <div>
        <button class="btn btn-primary">Güncelle</button>
    </div>

}
