@using Kargo_Takip_Projesi.Models.Veri_Tabani
@model List<Alici_Bilgileri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Alıcı İd</th>
        <th>Alıcı Adı</th>
        <th>Alıcı Soyadı</th>
        <th>Alıcı Adresi</th>
        <th>Alıcı İlçe</th>
        <th>Alıcı İl</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var alc in Model)
        {
            <tr>
                <th>@alc.Alici_Id</th>
                <td>@alc.Alici_Ad</td>
                <td>@alc.Alici_Soyad</td>
                <td>@alc.Alici_Adres</td>
                <td>@alc.Alici_Ilce</td>
                <td>@alc.Alici_Il</td>
                <td><a href="/Alici/AliciGuncelle/@alc.Alici_Id" class="btn btn-danger">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Alici/YeniAlici/" class="btn btn-success">Ekle</a>


